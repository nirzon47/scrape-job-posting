<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Document</title>
		<style>
			* {
				font-family: monospace;
				color: white;
			}

			body {
				background-color: rgb(31, 31, 31);
			}

			.job-card {
				margin-bottom: 4rem;
			}
		</style>
	</head>
	<body>
		<main></main>

		<script type="module">
			const main = document.getElementsByTagName('main')[0]

			fetch('./data.json')
				.then((response) => response.json())
				.then((data) => {
					data.forEach((job) => {
						const div = document.createElement('div')
						div.classList.add('job-card')

						const h2 = document.createElement('h2')
						h2.classList.add('job-title')

						const h3 = document.createElement('h3')
						h3.classList.add('company-name')

						const h4 = document.createElement('h4')
						h4.classList.add('location')

						const h5 = document.createElement('h5')
						h5.classList.add('job-type')

						const dateSpan = document.createElement('span')
						dateSpan.classList.add('date')

						const jobP = document.createElement('p')
						jobP.classList.add('job-description')

						h2.innerText = job.job_title
						h3.innerText = job.company_name
						h4.innerText = job.location
						h5.innerText = job.job_type
						dateSpan.innerText = job.posted_date
						jobP.innerText = job.description

						div.appendChild(h2)
						div.appendChild(h3)
						div.appendChild(h4)
						div.appendChild(h5)
						div.appendChild(dateSpan)
						div.appendChild(jobP)

						main.appendChild(div)
					})
				})
				.catch((error) => console.error('Error fetching JSON:', error))
		</script>
	</body>
</html>
